<p><%=@farmer.name  %></p>
<p><%=@farmer.address  %></p>
<p><%=@farmer.description  %></p>
<%= link_to "Add Product", new_product_path%>

<br>
<hr>

<div class='cards-container'>
  <% @products.each do |product| %>
    <div class=product-card>                
      <div class='card-img' style="background-image: url('<%= cl_image_path product.product_photos.first.data, height: 160, width: 335, crop: :fill %>')">
          <div class='add-to-cart'>            
              <% if current_user.role == "Restaurant" %>
                  <%= link_to product_order_products_path(product), class: "nav-icon", method: :post do %>
                      <ion-icon name="add-circle-outline"></ion-icon>
                  <% end %>                
              <% end %>            
          </div>
      </div>
     
      <div class='card-details'>
          <div class='rows'>
              <h4><%= link_to product.name.capitalize, product_path(product) %></h4>
              
              <%= link_to farmer_path(product.farmer) do %>
                  <%= cl_image_tag product.farmer.user.avatar, class: 'photo-card avatar', crop: :fill %>
              <% end %>                        
          </div>
          
          <div class='rows'>
              <p>⭐️️️️️️️⭐️⭐️⭐️<%=product.rating%></p>
              <p>$<%=product.price%> / <small><%=product.unit_of_measurement%></small></p>
          </div>
      </div>
    </div>
  <% end %>
</div>


